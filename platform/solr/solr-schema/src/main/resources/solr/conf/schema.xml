      <analyzer>
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.PhoneticFilterFactory" encoder="ColognePhonetic" inject="true"/>
      </analyzer>
    </fieldType>
    <dynamicField name="*_txt_phonetic_cologne" type="text_phonetic_cologne" docValues="false" multiValued="true" indexed="true" stored="false"/>
    <copyField source="*_txt" dest="*_txt_phonetic_cologne"/>
