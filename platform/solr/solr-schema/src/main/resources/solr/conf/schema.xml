      <analyzer>
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.PhoneticFilterFactory" encoder="Caverphone" inject="true"/>
      </analyzer>
    </fieldType>
    <dynamicField name="*_txt_phonetic_caverphone" type="text_phonetic_caverphone" docValues="false" multiValued="true" indexed="true" stored="false"/>
    <copyField source="*_txt" dest="*_txt_phonetic_caverphone"/>
    -->
